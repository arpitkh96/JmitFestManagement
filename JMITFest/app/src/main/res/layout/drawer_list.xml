<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/drawer_header" />

    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:foreground="@drawable/ripple_normal"
        android:onClick="home"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_event_black_24dp"
            android:tint="#666" />

        <TextView
            android:id="@+id/headerItems1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/icon1"
            android:layout_toRightOf="@+id/icon1"
            android:clickable="false"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Home"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myevets"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:foreground="@drawable/ripple_normal"
        android:onClick="myEvents"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_event_black_24dp"
            android:tint="#666" />

        <TextView
            android:id="@+id/headerItems2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:clickable="false"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="My Events"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clubEvents"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:foreground="@drawable/ripple_normal"
        android:onClick="clubevents"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/clubEventsicon2"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_event_black_24dp"
            android:tint="#666" />

        <TextView
            android:id="@+id/clubEventsheaderItems2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/clubEventsicon2"
            android:layout_toRightOf="@+id/clubEventsicon2"
            android:clickable="false"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Club Events"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Fests"
        android:textColor="#7f000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <com.jmit.festmanagement.utils.EmptyRecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.jmit.festmanagement.utils.EmptyRecyclerView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.ContentLoadingProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/progressBar"
                android:indeterminateTintMode="src_in"
                android:indeterminateTint="@android:color/black"
                android:indeterminate="true"
                android:indeterminateBehavior="repeat"
                style="@style/Base.Widget.AppCompat.ProgressBar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/nodata"
                android:text="Sorry, No data available"/>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/adminPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-medium"

            android:text="Admin Panel"
            android:textColor="#7f000000" />

        <RelativeLayout
            android:id="@+id/addEvent"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:foreground="@drawable/ripple_normal"
            android:onClick="adminPanel"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_event_black_24dp"
                android:tint="#666" />

            <TextView
                android:id="@+id/headerItems4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/icon4"
                android:layout_toRightOf="@+id/icon4"
                android:clickable="false"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Add Event"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/editevent"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:foreground="@drawable/ripple_normal"
            android:onClick="adminPanel"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_event_black_24dp"
                android:tint="#666" />

            <TextView
                android:id="@+id/headerItems5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/icon5"
                android:layout_toRightOf="@+id/icon5"
                android:clickable="false"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Edit Event"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/upload_results"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:foreground="@drawable/ripple_normal"
            android:onClick="adminPanel"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/icon7"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_event_black_24dp"
                android:tint="#666" />

            <TextView
                android:id="@+id/headerItems7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/icon7"
                android:layout_toRightOf="@+id/icon7"
                android:clickable="false"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Upload Results"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/get_registrations"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:foreground="@drawable/ripple_normal"
            android:onClick="adminPanel"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/icon6"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_event_black_24dp"
                android:tint="#666" />

            <TextView
                android:id="@+id/headerItems6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/icon6"
                android:layout_toRightOf="@+id/icon6"
                android:clickable="false"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="View Registrations"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@android:color/transparent"
        android:paddingBottom="8dp"
        android:paddingTop="0dp"
        android:src="#e0e0e0"></ImageView>

    <RelativeLayout
        android:id="@+id/logout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:foreground="@drawable/ripple_normal"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/logout_square_button"
            android:tint="#666" />

        <TextView
            android:id="@+id/headerItems3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/icon3"
            android:layout_toRightOf="@+id/icon3"
            android:clickable="false"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Logout"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
