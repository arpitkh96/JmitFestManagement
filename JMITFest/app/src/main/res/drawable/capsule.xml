<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
    <shape
        android:shape="rectangle">
        <corners android:radius="20dp"/> <!-- increasing the value, increases the rounding. And as  TTransmit said, to make it like a capsule make the radius half of your button height -->
        <stroke android:width="1dp" android:color="#fff"/> <!-- the button color -->

    </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="20dp"/> <!-- increasing the value, increases the rounding. And as  TTransmit said, to make it like a capsule make the radius half of your button height -->
            <solid  android:color="#7fffffff"/> <!-- the button color -->

        </shape>
    </item>
</selector>